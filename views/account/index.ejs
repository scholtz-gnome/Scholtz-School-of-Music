<header>
  <h1>Account</h1>
  <% if (user) { %>
  <button class="submit"><a href="/account/lessons">Lessons</a></button>
  <button class="submit"><a href="/account/invoices">Invoices</a></button>
  <% } %>
</header>
<main>
<!-- if user is logged in -->
<% if (user) { %>
  <h2>Welcome, <%= `${user.first} ${user.last}` %></h2>
  <% if (user.role.admin) { %>
    <h3>Admin</h3>
  <% } %>
  <button class="submit"><a href="/account/logout">Logout</a></button>
<% } else { %>
  <h4>Have an account? Log in here:</h4>
  <button class="submit"><a href="/account/login">Log In</a></button>
  <h4>Otherwise, sign up here:</h4>
  <button class="submit"><a href="/account/signup">Sign Up</a></button>
<% } %>
</main>